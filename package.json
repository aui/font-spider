{
    "name": "font-spider",
    "description": "Webfont optimizer",
    "version": "1.0.0-beta3",
    "homepage": "https://github.com/aui/font-spider",
    "author": {
        "name": "aui",
        "email": "sugarpie.tang@gmail.com"
    },
    "repository": {
        "type": "git",
        "url": "git://github.com/aui/font-spider.git"
    },
    "bugs": {
        "url": "https://github.com/aui/font-spider/issues"
    },
    "bin": {
        "font-spider": "bin/font-spider"
    },
    "main": "./src/index.js",
    "engines": {
        "node": ">= 4.0.0"
    },
    "scripts": {
        "_remove": "rm -rf test/demo-release",
        "_copy": "mkdir test/demo-release && cp -R test/demo/* test/demo-release",
        "demo": "npm run _remove && npm run _copy && node bin/font-spider --ignore '\\.woff2$' --no-backup test/demo-release/**/*.html",
        "test": "mocha test/index.js && npm run demo"
    },
    "dependencies": {
        "browser-x": "^0.0.1-beta5",
        "colors": "^1.1.2",
        "commander": "^2.9.0",
        "css-font-parser": "^0.2.1",
        "fontmin": "^0.9.4",
        "glob": "^7.0.3"
    },
    "devDependencies": {
        "mocha": "=2.2.5"
    },
    "license": "MIT",
    "keywords": [
        "font",
        "fontforge",
        "font-face",
        "woff",
        "ttf",
        "svg",
        "eot",
        "truetype",
        "css",
        "webfont"
    ]
}